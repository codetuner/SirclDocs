<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - SirclDocs.Website</title>
    <link rel="stylesheet" href="https://use.fontawesome.com/releases/v5.5.0/css/all.css" integrity="sha384-B4dIYHKNBt8Bc12p+WXckhzcICo0wtJAoU8YZTY5qE0Id1GSseTk6S+L3BlXeVIU" crossorigin="anonymous">
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/css/bootstrap.min.css" integrity="sha384-eOJMYsd53ii+scO/bJGFsiCZc+5NDVN2yr8+0RDqr0Ql0h+rP48ckxlpbzKgwra6" crossorigin="anonymous">
    <link rel="stylesheet" href="~/lib/prismjs/prism.css" />
    <link href="~/lib/sircl2/sircl.css" rel="stylesheet" />
    <link href="~/lib/sircl-font/style.css" rel="stylesheet" />
    <link href="~/lib/site/site.css" rel="stylesheet" />
</head>
<body class="line-numbers">
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
        <div class="container-fluid">
            <span>
                <a class="navbar-brand" href="/">
                    <i class="icon-sircl-logo"></i>
                    <b>Sircl</b>
                </a>
            </span>
            <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navBarMainContent">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navBarMainContent">
                <ul class="navbar-nav me-auto mb-2 mb-lg-0">
                    <li class="nav-item active">
                        <a class="nav-link" href="/Home"><i class="far fa-file-alt"></i> Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Doc/v2/GetStarted"><i class="far fa-file-alt"></i> Get Started</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="/Ref"><i class="far fa-file-alt"></i> Reference</a>
                    </li>
                </ul>
                <partial name="_LoginPartial" />
                <ul class="navbar-nav">
                    <a class="btn btn-primary" href="/Doc/v2/GetStarted">Download</a>
                </ul>
            </div>
        </div>
    </nav>

    <div>
        @RenderBody()
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2021 - Arebis / CodeTuner / Rudi Breedenraedt - <a href="/Identity/Account/Login?ReturnUrl=%2F">Login</a>
            @if (User.IsInRole("Administrator"))
            {
                @: - <a href="/MvcDashboardIdentity">Identity</a> - <a href="/MvcDashboardContent/Document?State=&DocumentTypeId=&Query=%2FDoc%2Fv2&order=SortKey%20ASC&PageSize=100">Content</a>
            }
        </div>
    </footer>

    <div id="back-top" class="onscrolltop-fade d-print-none" onclick-scrollintoview=".navbar" hidden>
        <i class="fas fa-chevron-circle-up"></i>
    </div>

    <script src="https://code.jquery.com/jquery-3.6.0.min.js" integrity="sha256-/xUj+3OJU5yExlq6GSYGSHk7tPXikynS7ogEvDej/m4=" crossorigin="anonymous"></script>
    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.0.0-beta3/dist/js/bootstrap.bundle.min.js" integrity="sha384-JEW9xMcG8R+pH31jmWH6WWP0WintQrMb4s7ZOdauHnUtxwoG2vI5DkLtS3qm9Ekf" crossorigin="anonymous"></script>
    <script src="~/lib/prismjs/prism.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/tocbot/4.11.1/tocbot.min.js"></script>
    <script src="~/lib/sircl2/sircl.js"></script>
    <script src="~/lib/sircl2/sircl-bootstrap5.js"></script>
    <script src="~/lib/sircl2/sircl-extended.js"></script>
    <script src="~/lib/site/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
