@model SirclDocs.Website.Models.Sitemap.IndexModel
@{
    Layout = null;
    Context.Response.ContentType = "text/xml";
}
<?xml version="1.0" encoding="UTF-8" ?>
<urlset xmlns="http://www.sitemaps.org/schemas/sitemap/0.9">
    @foreach (var url in Model.Urls)
    {
    <url>
        <loc>@(Model.RootUrl)@(url.Location)</loc>
        @if (url.LastModified.HasValue) { <lastmod>@(url.LastModified.Value.ToString("yyyy-MM-dd"))</lastmod> }            
    </url>
    }
</urlset> 